<div class="w-full bg-white rounded-lg shadow-md overflow-hidden border border-gray-200">
  <img class="w-full h-[225px] object-cover" src="<%= dish.image_url %>" alt="<%= dish.title %>">
  
  <div class="p-4">
    <h3 class="text-xl font-bold text-gray-800 mb-2"><%= dish.title %></h3>
    
    <p class="text-sm text-gray-500 mb-1">Prep time: <span class="font-medium"><%= dish.prep_time %> minutes</span></p>
    <p class="text-sm text-gray-500 mb-4">Cook time: <span class="font-medium"><%= dish.cook_time %> minutes</span></p>
    
    <h4 class="text-sm font-semibold text-gray-800 mb-1">Ingredients:</h4>
    <ul class="list-disc list-inside text-sm text-gray-600">
      <% dish.ingredients.each do |ingredient| %>
        <% if ingredient.id.to_s.in?(params[:ingredient_ids] || []) %>
          <li><span class="font-bold"><%= ingredient.name %><span></li>
        <% else %>
          <li><%= ingredient.name %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
